#include<bits/stdc++.h>
using namespace std;

namespace TYC
{
	const int N=3e5+10;
	int n,m,cnt,tot,mxlen,res,Head[N],fa[N][21],dep[N],dis[N],vis[N];

	inline int read()
	{
		int x=0,f=0;char ch=getchar();
		while(!isdigit(ch)) f|=(ch=='-'),ch=getchar();
		while(isdigit(ch)) x=x*10+ch-'0',ch=getchar();
		return f?-x:x;
	}

	struct edge
	{
		int to,next,w;
	}E[N<<1];

	void add(int u,int v,int w)
	{
		E[++cnt]=(edge){v,Head[u],w};
		Head[u]=cnt;
	}

	struct ques
	{
		int u,v,lca,len;
	}q[N];

	void dfs(int u,int f)
	{
		fa[u][0]=f;
		dep[u]=dep[f]+1;
		for(int i=1;i<=19;i++)
			fa[u][i]=fa[fa[u][i-1]][i-1];
		for(int i=Head[u];i;i=E[i].next)
		{
			int v=E[i].to;
			if(v==f) continue;
			dis[v]=dis[u]+E[i].w;
			dfs(v,u);
		}
	}

	inline int LCA(int u,int v)
	{
		if(dep[u]<dep[v]) swap(u,v);
		for(int t=0,d=dep[u]-dep[v];d;d>>=1,t++)
			if(d&1) u=fa[u][t];
		if(u==v) return u;
		for(int i=19;i>=0;i--)
			if(fa[u][i]!=fa[v][i])
				u=fa[u][i],v=fa[v][i];
		return fa[u][0];
	}

	void dfs2(int u,int pre)
	{
		for(int i=Head[u];i;i=E[i].next)
		{
			int v=E[i].to;
			if(v==fa[u][0]) continue;
			dfs2(v,i);
			vis[u]+=vis[v];
		}
		if(vis[u]==tot) res=max(res,E[pre].w);
	}

	bool check(int x)
	{
		tot=res=0;
		memset(vis,0,sizeof(vis));
		for(int i=1;i<=m;i++)
			if(q[i].len>x)
			{
				tot++;
				vis[q[i].u]++,vis[q[i].v]++;
				vis[q[i].lca]-=2;
			}
		dfs2(1,0);
		return mxlen-res<=x;
	}

	void work()
	{
		n=read(),m=read();
		for(int i=1;i<n;i++)
		{
			int u=read(),v=read(),w=read();
			add(u,v,w),add(v,u,w);
		}
		dfs(1,0);
		for(int i=1;i<=m;i++) 
		{
			int u=read(),v=read();
			q[i].u=u,q[i].v=v;
			q[i].lca=LCA(u,v);
			q[i].len=dis[u]+dis[v]-dis[q[i].lca]*2;
			mxlen=max(mxlen,q[i].len);
		}
		int l=0,r=mxlen,mid,ans;
		while(l<=r)
		{
			mid=(l+r)>>1;
			if(check(mid)) ans=mid,r=mid-1;
			else l=mid+1;
		}
		printf("%d\n",ans);
	}
}

int main()
{
	TYC::work();
	return 0;
}
