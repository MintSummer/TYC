#include<bits/stdc++.h>
using namespace std;

namespace TYC
{
	const int N=47000;
	typedef long long ll;
	ll n,ans;
	int m,cnt,prime[N],vis[N];

	inline void init()
	{
		m=sqrt(n);
		for(int i=2;i<=m;i++)
		{
			if(!vis[i]) prime[++cnt]=i;
			for(int j=1;j<=cnt&&i*prime[j]<=m;j++)
			{
				vis[i*prime[j]]=1;
				if(i%prime[j]==0) break;
			}
		}
	}

	bool is_prime(ll x)
	{
		if(x<=m) return !vis[x];
		for(int i=1;i<=cnt&&prime[i]<=x;i++)
			if(!(x%prime[i])) return false;
		return true;
	}

	void dfs(int now,ll rest,ll x)
	{
		if(rest==1) 
			{ans=min(ans,x);return;}
		if(rest>m&&is_prime(rest+1)) 
			{ans=min(ans,x*(rest+1));return;}
		for(int i=now;i<=cnt&&prime[i]<=rest;i++)
			if(!rest%(prime[i]-1)) 
			{
				ll tmp=rest/(prime[i]-1),val=x*prime[i];
				dfs(i+1,tmp,val);
				while(tmp%prime[i]==0) 
				{
					tmp/=prime[i];
					val*=prime[i];
					dfs(i+1,tmp,val);
				}
			}
	}

	void work()
	{
		scanf("%lld",&n);
		init();
		ans=2147483649LL;
		dfs(1,n,1);
		if(ans>2147483648LL) printf("-1\n");
		else printf("%lld\n",ans);
	}
}

int main()
{
	TYC::work();
	return 0;
}
